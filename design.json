{
    "app": {
      "name": "Social Feed App",
      "theme": {
        "backgroundColor": "#0a0a0a",
        "cardBackgroundColor": "#1a1a1a",
        "textPrimaryColor": "#ffffff",
        "textSecondaryColor": "#888888",
        "accentColor": "#00d4ff",
        "borderColor": "#333333"
      },
      "screens": {
        "feedScreen": {
          "type": "Scaffold",
          "appBar": {
            "type": "AppBar",
            "backgroundColor": "#0a0a0a",
            "elevation": 0,
            "child": {
              "type": "TextField",
              "hintText": "Search posts, users, topics...",
              "hintStyle": {
                "color": "#666666",
                "fontSize": 16
              },
              "decoration": {
                "fillColor": "#2a2a2a",
                "filled": true,
                "border": "OutlineInputBorder",
                "borderRadius": 25,
                "contentPadding": {
                  "horizontal": 20,
                  "vertical": 12
                },
                "prefixIcon": "search_icon"
              }
            }
          },
          "body": {
            "type": "ListView",
            "backgroundColor": "#0a0a0a",
            "children": [
              {
                "type": "PostCard",
                "id": "post_1",
                "header": {
                  "profileImage": {
                    "type": "CircleAvatar",
                    "size": 48,
                    "backgroundColor": "#FFD700",
                    "child": "initials_or_anonymous_image"
                  },
                  "userInfo": {
                    "username": "blocksoc.eth",
                    "subtitle": "Someone at Blocsoc",
                    "timestamp": "3h",
                    "isVerified": true
                  }
                },
                "content": {
                  "text": "Layer 2 scaling solutions will play a huge role in mass adoption of blockchain technology."
                },
                "image": {
                  "type": "Image",
                  "src": "3d_cube_illustration",
                  "height": 200,
                  "borderRadius": 12
                },
                "actions": {
                  "layout": "Row",
                  "spacing": 16,
                  "children": [
                    {
                      "type": "Button",
                      "icon": "thumb_up",
                      "label": "Like",
                      "backgroundColor": "transparent",
                      "textColor": "#ffffff",
                      "borderRadius": 8
                    },
                    {
                      "type": "Button",
                      "icon": "check_circle",
                      "label": "Verify",
                      "backgroundColor": "transparent",
                      "textColor": "#00d4ff",
                      "borderRadius": 8
                    }
                  ]
                }
              },
              {
                "type": "PostCard",
                "id": "post_2",
                "header": {
                  "profileImage": {
                    "type": "CircleAvatar",
                    "size": 48,
                    "backgroundColor": "#8B7355",
                    "child": "initials_or_anonymous_image"
                  },
                  "userInfo": {
                    "username": "naval.eth",
                    "subtitle": "Entrepreneur & investor",
                    "timestamp": "6h",
                    "isVerified": true
                  }
                },
                "content": {
                  "text": "The future belongs to those who can build and deploy AI agents that work for them 24/7."
                },
                "actions": {
                  "layout": "Row",
                  "spacing": 16,
                  "children": [
                    {
                      "type": "Button",
                      "icon": "thumb_up",
                      "label": "Like",
                      "backgroundColor": "transparent",
                      "textColor": "#ffffff",
                      "borderRadius": 8
                    },
                    {
                      "type": "Button",
                      "icon": "check_circle",
                      "label": "Verify",
                      "backgroundColor": "transparent",
                      "textColor": "#00d4ff",
                      "borderRadius": 8
                    }
                  ]
                }
              },
              {
                "type": "PostCard",
                "id": "post_3",
                "header": {
                  "profileImage": {
                    "type": "CircleAvatar",
                    "size": 48,
                    "backgroundColor": "#FF69B4",
                    "child": "initials_or_anonymous_image"
                  },
                  "userInfo": {
                    "username": "paradigm.eth",
                    "subtitle": "Crypto investment firm",
                    "timestamp": "7h",
                    "isVerified": true
                  }
                },
                "content": {
                  "text": "Building the infrastructure for decentralized finance is the next frontier of innovation."
                },
                "actions": {
                  "layout": "Row",
                  "spacing": 16,
                  "children": [
                    {
                      "type": "Button",
                      "icon": "thumb_up",
                      "label": "Like",
                      "backgroundColor": "transparent",
                      "textColor": "#ffffff",
                      "borderRadius": 8
                    },
                    {
                      "type": "Button",
                      "icon": "check_circle",
                      "label": "Verify",
                      "backgroundColor": "transparent",
                      "textColor": "#00d4ff",
                      "borderRadius": 8
                    }
                  ]
                }
              }
            ]
          },
          "bottomNavigationBar": {
            "type": "BottomNavigationBar",
            "backgroundColor": "#1a1a1a",
            "selectedItemColor": "#00d4ff",
            "unselectedItemColor": "#666666",
            "items": [
              {
                "label": "Public Feed",
                "icon": "public",
                "route": "/public_feed"
              },
              {
                "label": "Private Channels",
                "icon": "lock",
                "route": "/private_channels"
              }
            ]
          }
        }
      },
      "components": {
        "PostCard": {
          "type": "Container",
          "margin": {
            "horizontal": 12,
            "vertical": 8
          },
          "padding": 16,
          "decoration": {
            "color": "#1a1a1a",
            "borderRadius": 16,
            "border": {
              "color": "#333333",
              "width": 1
            }
          },
          "child": {
            "type": "Column",
            "crossAxisAlignment": "start",
            "children": [
              {
                "type": "Row",
                "children": [
                  {
                    "type": "ProfileImage",
                    "size": 48
                  },
                  {
                    "type": "SizedBox",
                    "width": 12
                  },
                  {
                    "type": "Column",
                    "crossAxisAlignment": "start",
                    "children": [
                      {
                        "type": "Text",
                        "style": "username",
                        "fontSize": 16,
                        "fontWeight": "bold"
                      },
                      {
                        "type": "Text",
                        "style": "subtitle",
                        "fontSize": 13
                      },
                      {
                        "type": "Text",
                        "style": "timestamp",
                        "fontSize": 12
                      }
                    ]
                  }
                ]
              },
              {
                "type": "SizedBox",
                "height": 12
              },
              {
                "type": "Text",
                "content": "Post content text",
                "fontSize": 15,
                "color": "#ffffff",
                "maxLines": 5
              },
              {
                "type": "SizedBox",
                "height": 12
              },
              {
                "type": "Row",
                "spacing": 16,
                "children": [
                  {
                    "type": "ActionButton",
                    "icon": "thumb_up",
                    "label": "Like"
                  },
                  {
                    "type": "ActionButton",
                    "icon": "check_circle",
                    "label": "Verify"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  }